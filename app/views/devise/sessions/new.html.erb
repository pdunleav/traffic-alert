<div class="container pt-5 mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6">
      <h1>Log in to <strong>Freddy</strong>.</h1>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "freddie@mercury.com" %>
          <%= f.input :password, required: false, label: false, placeholder: "••••••" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions form-actions-flex">
          <%= f.button :submit, "Log in", class: "btn btn-freddy-primary" %>
          <%= link_to "Sign up", new_registration_path(resource_name) %>
        </div>
      <% end %>

    </div>
  </div>
</div>



